<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="opetHarmobeer">
  <property name="hibernate.connection.datasource">java:jboss/datasources/OracleDSHARMOBEER</property>
  <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.use_sql_comments">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.current_session_context_class">thread</property>
  <property name="hibernate.generate_statistics">true</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  
  <mapping class="com.harmobeer.vo.Prato"/>
  <mapping class="com.harmobeer.vo.Cerveja"/>
  <mapping class="com.harmobeer.vo.Harmonizacao"/>
  <mapping class="com.harmobeer.vo.Usuario"/>
  <mapping class="com.harmobeer.vo.Avaliacao"/>
  
    
 </session-factory>
</hibernate-configuration>
